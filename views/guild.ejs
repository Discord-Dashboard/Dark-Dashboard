                                    onerror="this.src = `https://blog.logomyway.com/wp-content/uploads/2020/12/discord-mascot.png`;"
                                    src="https://cdn.discordapp.com/icons/<%=bot.guilds.cache.get(guildid).id%>/<%=bot.guilds.cache.get(guildid).icon%>.png" alt="...">
                              </div>
